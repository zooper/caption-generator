#!/bin/bash

# AI Caption Studio - Cloudflare Secrets Setup Script with Values
# COPY this file to 'set-secrets-with-values.sh' and fill in your actual values
# The copied file is in .gitignore so your secrets won't be committed

echo "üîê Setting up secrets for AI Caption Studio on Cloudflare..."

# Project name
PROJECT_NAME="ai-caption-studio"

# Your actual secret values - FILL THESE IN:
SMTP_PASSWORD="your_resend_api_key_here"          # e.g., re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_API_KEY="your_openai_api_key_here"        # e.g., sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
JWT_SECRET="your_jwt_secret_here"                # e.g., generate with: openssl rand -base64 32

# Set secrets non-interactively
echo "$SMTP_PASSWORD" | wrangler pages secret put SMTP_PASSWORD
echo "$OPENAI_API_KEY" | wrangler pages secret put OPENAI_API_KEY
echo "$JWT_SECRET" | wrangler pages secret put JWT_SECRET

echo "‚úÖ All secrets have been set!"
echo "üöÄ Your AI Caption Studio should now be fully functional."